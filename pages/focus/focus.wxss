/* pages/focus/focus.wxss */

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.timer {
  font-size: 48px;
  margin-bottom: 50px;
}

.start-button,
.stop-button {
  width: 200px;
  height: 40px;
  color: #fff;
  border: none;
  border-radius: 20px;
  margin-bottom: 10px;
}


.start-button:active,
.stop-button:active{
  background-color: #0056b3;
}

.duration {
  font-size: 16px;
  color: #999;
}

 