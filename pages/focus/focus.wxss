/* pages/focus/focus.wxss */

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100px;
  height: 90vh;
  position: relative;
}

.timer {
  font-size: 36px;
  top: 30%;
}

.start-button,
.stop-button {
  width: 200px;
  height: 40px;
  color: #fff;
  border: none;
  border-radius: 20px;
  margin-bottom: 10px;
  top: 20%;
}

.duration {
  margin-top: 20px;
  font-size: 16px;
  color: #999;
  position: absolute;
  bottom: 50%;
}

.history-button {
  margin-top: 40px;
  position: absolute;
  bottom: 40%;
  font-size: 16px;
  color: #999;
}
