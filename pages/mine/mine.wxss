/* pages/mine/mine.wxss */
.page{
    display:block;
    min-height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
  }
  .userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    display: flex;
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    margin-top: 20%;
  }
  .picker{
    margin-top: 20rpx;
    padding: 0 0 0 0;
    margin-left: 30rpx;
    background-color: #FFFFFF;
}

