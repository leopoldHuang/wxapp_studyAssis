.schedule {
  align-items: center;
  height: 70rpx;
  margin-left: 3%;
}

.listall {
  width: 15%;
  margin-left: 3%;
}

.task {
  width: 95%;
  margin-left: 2.5%;
  margin-right: 2.5%;
  display: flex;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  margin-top: 15rpx;
  border: 4rpx solid;
  border-radius: 10rpx;
  display: flex;
}

.taskone {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-right: 0%;
}

.date {
  margin-left: 1%;
  font-size: 90%;
}

.point {
  width: 30rpx;
  height: 30rpx;
  margin-top: 8%;
  margin-left: 1%;
  background: blue;
  -moz-border-radius: 50px;
  -webkit-border-radius: 50px;
  border-radius: 15px;
}

.item-time {
  text-align: center;
  font-size: 19px;
  display: flex;
  flex-direction: column;
}

.line {
  float: left;
  margin-top: 0rpx;
  margin-left: 30rpx;
  width: 1px;
  height: 100%;
  background: rgb(255, 255, 255);
  border-left: 3px darkgray;
  border-left-style: dotted;
}

.thing {
  overflow-y: hidden;
  height: 80rpx;
  margin-top: -10rpx;
  margin-left: 10rpx;
  font-size: 24px;
}

.attribute {
  height: 55rpx;
  overflow-y: hidden;
  margin-left: 10px;
  margin-top: 12px;
  color: darkgray;
}

image.setting {
  margin-right: 0%;
  margin-top: 0%;
}

image.trash {
  margin-right: 0%;
  margin-top: 30%;
}

.staybutton {
  bottom: 60px;
  right: 13px;
  position: fixed;
  z-index: 1;
}

button.addtodo {
  border-radius: 100%;
  color: white;
  height: fit-content;
  width: fit-content;
  float: right;
  margin-bottom: 50%;
}

.popup-box {
  position: fixed;
  z-index: 99;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}

/* 弹窗 */
.info-center {
  position: fixed;
  z-index: 999;
  background-color: white;
  display: flex;
  border-radius: 10rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
}

view.addtitle {
  position: absolute;
  left: 32%;
  top: 5px;
  font-size: 25px;
}

/* 名称 */
view.addtext {
  position: absolute;
  left: 5px;
  top: 40px;
  font-size: 20px;
}

/* 输入框 */
input.inputname {
  position: absolute;
  top: 42px;
  left: 54px;
  width: 60%;
  border: 1px solid rgb(187, 187, 187);
}

/* 内容 */
view.content {
  margin-top: 4%;
  font-size: 20px;
}

/* 内容输入框 */
input.inputcontent {
  position: absolute;
  margin-top: -7%;
  margin-left: 16%;
  width: 60%;
  border: 1px solid rgb(187, 187, 187);
}

/* 提醒时间 */
view.remind {
  margin-top: 3%;
  font-size: 20px;
}

input.inputremind {
  position: absolute;
  width: 20%;
  margin-top: -7%;
  margin-left: 32%;
  border: 1px solid rgb(187, 187, 187);
}

view.min {
  position: absolute;
  margin-top: -6%;
  margin-left: 55%;
}

radio.remindable {
  position: absolute;
  font-size: 12px;
  margin-top: -6%;
  margin-left: 70%;
}

/* 确认取消按钮 */
.row-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx dashed #f1f1f1;
  margin-top: 4%;
}

.left-btn {
  margin-left: 10%;
  width: 80rpx;
  text-align: center;
  border: 10rpx solid ;
  border-radius: 10%;
  color: white;
}

.right-btn {
  border-radius: 10%;
  margin-left: 50%;
  text-align: center;
  border: 10rpx solid ;
  color: white;
  width: 80rpx;
}

/* 时间选择器 */
.act_item {
  width: 650rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: -10rpx;
  box-sizing: border-box;
  padding: 24rpx;
  position: relative;
  font-size: 28rpx;
  color: #4D4D4D;
  font-weight: 500;
}

.require {
  color: #E9543E;
}

.nowp {
  white-space: nowrap;
  margin-right: 15rpx;
}

.act_right {
  display: flex;
  justify-content: flex-end;
  margin-top: -16px;
  font-size: 28rpx;
  color: #999;
}

.act_item picker {
  flex: 1;
  margin-left: 40rpx;
}

.act_box {
  margin: 160rpx auto;
  width: 650rpx;
}

.sel_text {
  font-size: 28rpx;
  font-weight: 500;
  color: #4D4D4D;
}