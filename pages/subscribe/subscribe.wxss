/* index.wxss */
.head{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 10px;
  color: #ffffff;
  background:#63A6E8;
  margin-bottom: 60rpx;
}

.log{
  width: 600rpx;
  margin: 0 auto;
}

.log_title,.log_date,.log_person,.log_tip{
  display: flex;
  margin: 20rpx 0;
  text-align: center;
}
.log_title text{
  color: white;
  display: block;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #63A6E8;
  border-bottom: 2rpx solid #63A6E8;
  border-left: 2rpx solid #63A6E8;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  text-align: center;
  background: #63A6E8;
}

.log_title .nowing{
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #63A6E8;
  border-top-right-radius: 20rpx;
